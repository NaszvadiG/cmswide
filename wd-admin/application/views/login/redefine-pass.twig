{% extends "template.twig" %}
{% block content %}
    <div class="">
        <a class="hiddenanchor" id="toregister"></a>
        <a class="hiddenanchor" id="tologin"></a>

        <div id="wrapper">
            <div id="login" class=" form">
                <section class="login_content">
                    {{form_open('login/redefine-pass?token=' ~ token ~ '&login=' ~ login)|raw}}
                    <div align="center">
                        <img src="{{base_url('assets/images/widecms.png')}}" class="logo img-responsive">
                    </div>
                    {% if sended %}
                        <div class="alert alert-success">
                            {{lang.line('redefine_message_success')|raw}}
                        </div>
                        <a class="reset_pass" href="{{base_url('login')}}">Login <i class="fa fa-arrow-right fa-fw"></i></a>
                        {% else %}
                        <div>
                            <input type="password" name="pass" value="{{set_value('pass')}}" class="form-control" placeholder="{{lang.line('redefine_password_field')}}" required="" />
                        </div>
                        <div>
                            <input type="password" name="re_pass" value="{{set_value('re_pass')}}" class="form-control" placeholder="{{lang.line('redefine_re_password_field')}}" required="" />
                        </div>
                        <div>
                            <input value="{{lang.line('redefine_change_pass_btn')}}" name="access" class="btn btn-primary pull-right" type="submit">
                            <a class="reset_pass" href="{{base_url('login')}}"><i class="fa fa-arrow-left fa-fw"></i> {{lang.line('redefine_return_btn')}}</a>
                        </div>
                    {% endif %}
                    {{form_close()|raw}}
                    {{validation_errors('<p class="alert alert-danger">', '</p>')|raw}}
                </section>
            </div>
        </div>
    </div>
{% endblock %}

